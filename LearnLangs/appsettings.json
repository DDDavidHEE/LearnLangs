{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=LearnLangsDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AzureSpeech": {
    "Region": "southeastasia",
    "RecognitionLanguage": "en-US"
    // SubscriptionKey sẽ lấy từ User Secrets
  },
  "AzureTranslator": {
    "Endpoint": "https://api.cognitive.microsofttranslator.com",
    "Region": "southeastasia",
    "DefaultTo": "en"
    // SubscriptionKey sẽ lấy từ User Secrets
  },
  "GeminiAI": {
    "Model": "gemini-2.0-flash",
    "Endpoint": "https://generativelanguage.googleapis.com",
    "ApiVersion": "v1beta"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}