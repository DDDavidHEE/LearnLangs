@model LearnLangs.Models.Lesson

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderIndex)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderIndex)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.XpReward)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.XpReward)
        </dd>
    </dl>
</div>











<!-- Add Complete Lesson Button -->
<div class="mt-3 d-flex gap-2">
    <a asp-action="TakeQuiz"
       asp-route-lessonId="@Model.Id"
       class="btn btn-success">
        Start Quiz
    </a>

    <a asp-action="Index"
       asp-route-courseId="@Model.CourseId"
       class="btn btn-secondary">
        Back to Lessons
    </a>

    <a asp-action="Edit"
       asp-route-id="@Model.Id"
       class="btn btn-outline-secondary">
        Edit
    </a>
</div>

