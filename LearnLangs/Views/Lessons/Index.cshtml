@model IEnumerable<LearnLangs.Models.Lesson>

@{
    ViewData["Title"] = "Lessons";
    var courseId = (ViewBag.CourseId as int?) ?? 0;

    // Nếu đã bật phân quyền theo vai trò, có thể đổi thành:
    // bool canEdit = User.IsInRole("Admin");
    bool canEdit = User.Identity?.IsAuthenticated ?? false;
}

<h2>Lessons</h2>

<p class="mb-2">
    <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-secondary">← Back to Courses</a>
</p>

@if (canEdit)
{
    <p>
        <a asp-action="Create" asp-route-courseId="@courseId" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Course)</th>
            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
            <th>@Html.DisplayNameFor(model => model.First().OrderIndex)</th>
            <th>@Html.DisplayNameFor(model => model.First().XpReward)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course?.Name</td>
                <td>@item.Title</td>
                <td>@item.OrderIndex</td>
                <td>@item.XpReward</td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@item.Id"
                       asp-route-courseId="@courseId">Details</a>

                    @if (canEdit)
                    {
                        @: | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        @: | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
