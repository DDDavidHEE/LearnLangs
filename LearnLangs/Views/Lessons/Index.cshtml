@model IEnumerable<LearnLangs.Models.Lesson>

@{
    ViewData["Title"] = "Lessons";
    var courseId = (int)ViewBag.CourseId;
    bool isAdmin = User.IsInRole("Admin");   // chỉ admin mới thấy nút CRUD
}

<h2>Lessons</h2>

<p>
    <a asp-controller="Courses"
       asp-action="Details"
       asp-route-id="@courseId"
       class="btn btn-outline-secondary">← Back to Course</a>
</p>

@if (isAdmin)
{
    <p>
        <a asp-action="Create"
           asp-route-courseId="@courseId"
           class="btn btn-primary">Create Lesson</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Order</th>
            <th>XP</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (Model ?? Enumerable.Empty<LearnLangs.Models.Lesson>()))
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.OrderIndex</td>
                <td>@item.XpReward</td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@item.Id"
                       asp-route-courseId="@courseId">Details</a>
                    @if (isAdmin)
                    {
                        @: | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        @: | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
