@model IEnumerable<LearnLangs.Models.Games.Exam>
@{
    ViewData["Title"] = "Games";
}
<div class="container mt-4">
    <h2 class="mb-3"><i class="bi bi-joystick me-2"></i>Danh sách các bài thi / level</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Chưa có bài thi nào. Vui lòng seed dữ liệu.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var exam in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@exam.Title</h5>
                            <!-- BẮT ĐẦU THI: điều hướng qua Exams/Start để map tới đúng level -->
                            <a asp-controller="Exams" asp-action="Start" asp-route-id="@exam.Id"
                               class="btn btn-outline-primary w-100">
                                <i class="bi bi-play-circle me-1"></i>Bắt đầu chơi
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
