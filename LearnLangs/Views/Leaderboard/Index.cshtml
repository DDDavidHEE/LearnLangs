@using X.PagedList 
@using X.PagedList.Mvc.Core
@model IPagedList<LearnLangs.Models.ApplicationUser>

@{
    ViewData["Title"] = "Leaderboard";
}

<h1>Leaderboard</h1>

<table class="table">
    <thead>
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>XP</th>
            <th>Streak</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(Model.ToList().IndexOf(user) + 1)</td>  <!-- Rank -->
                <td>@user.UserName</td>  <!-- Display user's username -->
                <td>@user.TotalXP</td>  <!-- Display user's XP -->
                <td>@user.CurrentStreak</td>  <!-- Display user's streak -->
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.Classic)
</div>
