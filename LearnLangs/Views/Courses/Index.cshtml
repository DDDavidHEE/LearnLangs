@model IEnumerable<LearnLangs.Models.Course>

@{
    ViewData["Title"] = "Courses";
    // Chỉ Admin mới được tạo/sửa/xóa
    bool canEdit = User.IsInRole("Admin");
}

<h1>Courses</h1>

@if (TempData["CourseMsg"] != null)
{
    <div class="alert alert-warning">@TempData["CourseMsg"]</div>
}

@if (canEdit)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (Model ?? Enumerable.Empty<LearnLangs.Models.Course>()))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (canEdit)
                    {
                        <span> | </span>

                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <span> | </span>

                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
