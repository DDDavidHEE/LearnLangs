@model LearnLangs.Models.Course

@{
    ViewData["Title"] = "Course Details";
    // Chỉ Admin mới được tạo/sửa/xóa
    bool canEdit = User.IsInRole("Admin");
}

@if (TempData["CourseMsg"] != null)
{
    <div class="alert alert-warning">@TempData["CourseMsg"]</div>
}

<h1>@Model.Name</h1>
<p class="text-muted">@Model.Description</p>

<hr />
<h4>Lessons</h4>

@if (Model.Lessons == null || !Model.Lessons.Any())
{
    <div class="alert alert-info">This course has no lessons yet.</div>

    @if (canEdit)
    {
        <a asp-controller="Lessons"
           asp-action="Create"
           asp-route-courseId="@Model.Id"
           class="btn btn-primary mt-2">Create First Lesson</a>
    }
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Order</th>
                <th>XP</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in Model.Lessons.OrderBy(x => x.OrderIndex).ThenBy(x => x.Id))
            {
                <tr>
                    <td>@l.Title</td>
                    <td>@l.OrderIndex</td>
                    <td>@l.XpReward</td>
                    <td>
                        <a asp-controller="Lessons"
                           asp-action="Details"
                           asp-route-id="@l.Id"
                           asp-route-courseId="@Model.Id">Open</a>

                        <span> | </span>
                        <a class="text-success"
                           asp-controller="Lessons"
                           asp-action="TakeQuiz"
                           asp-route-lessonId="@l.Id">Start Quiz</a>

                        @if (canEdit)
                        {
                            <span> | </span>
                            <a asp-controller="Lessons" asp-action="Edit" asp-route-id="@l.Id">Edit</a>
                            <span> | </span>
                            <a asp-controller="Lessons" asp-action="Delete" asp-route-id="@l.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">← Back to Courses</a>
</div>
