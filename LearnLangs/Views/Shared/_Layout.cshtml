@using Microsoft.AspNetCore.Identity
@using LearnLangs.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // đọc theme đã lưu (cookie được set khi Save trong Settings hoặc bằng nút toggle)
    var theme = Context.Request.Cookies["ui-theme"] ?? "light"; // "light" | "dark"
}

<!DOCTYPE html>
<html lang="vi" data-bs-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LearnLangs</title>

    <!-- Bootstrap 5.3+ (hỗ trợ data-bs-theme) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnLangs.styles.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
</head>
<body class="bg-body-tertiary">

    <!-- Topbar -->
    <nav class="navbar navbar-light bg-white border-bottom sticky-top">
        <div class="container-fluid">
            <!-- mobile: toggle sidebar -->
            <button class="btn btn-outline-secondary d-md-none" id="btnSidebar" type="button" aria-label="Toggle menu">
                <i class="bi bi-list"></i>
            </button>

            <!-- brand -->
            <a class="navbar-brand ms-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-play-circle-fill text-primary me-1"></i>LearnLangs
            </a>

            <!-- main nav (hiển thị từ md+) -->
            <ul class="navbar-nav flex-row d-none d-md-flex ms-3 align-items-center">
                <!-- Flashcard dropdown -->
                <li class="nav-item dropdown me-2">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        Flashcard
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Flashcards" asp-action="Index" asp-route-mode="basic">
                                Common English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Flashcards" asp-action="Index" asp-route-mode="ielts">
                                Ielts Vocabulary
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Flashcards" asp-action="Index" asp-route-mode="hsk">
                                HSK Chinese
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- QUICK LINK: Conversation -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Chat" asp-action="Index">
                        <i class="bi bi-chat-dots me-1"></i>Conversation
                    </a>
                </li>
            </ul>

            <!-- auth / badges + theme toggle -->
            <div class="d-flex align-items-center gap-2 gap-md-3 ms-auto">
                <!-- theme toggle -->
                <button id="btnTheme" class="btn btn-sm btn-outline-secondary" type="button" title="Toggle theme">
                    <i class="bi @(theme=="dark" ? "bi-moon-stars" : "bi-sun")"></i>
                    <span class="d-none d-lg-inline ms-1">Theme</span>
                </button>

                @if (SignInManager.IsSignedIn(User))
                {
                    var me = await UserManager.GetUserAsync(User);
                    <span class="text-muted d-none d-sm-inline">Hello @me?.UserName!</span>
                    <span class="badge bg-primary-subtle text-primary">XP: @me?.TotalXP</span>
                    <span class="badge bg-warning-subtle text-warning">Streak: @me?.CurrentStreak</span>
                    <form class="d-inline ms-1 ms-md-2" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index","Home")">
                        <button class="btn btn-sm btn-outline-secondary">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-sm btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
                }
            </div>
        </div>
    </nav>

    <div class="app-wrap d-flex">
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <!-- Content -->
        <main class="app-content flex-grow-1 p-3 p-md-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-white py-3 px-3 text-muted">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - LearnLangs
        </div>
    </footer>

    <!-- Bootstrap Bundle 5.3.3 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle sidebar on mobile
        document.getElementById('btnSidebar')?.addEventListener('click', () => {
            document.body.classList.toggle('sidebar-open');
        });

        // Toggle theme (light/dark) + lưu cookie 'ui-theme'
        (function () {
            const btn = document.getElementById('btnTheme');
            if (!btn) return;

            btn.addEventListener('click', () => {
                const html = document.documentElement;
                const cur = html.getAttribute('data-bs-theme') || 'light';
                const next = (cur === 'dark') ? 'light' : 'dark';
                html.setAttribute('data-bs-theme', next);

                // lưu cookie 180 ngày
                const exp = new Date(Date.now() + 180 * 24 * 60 * 60 * 1000).toUTCString();
                document.cookie = `ui-theme=${next}; expires=${exp}; path=/; SameSite=Lax`;

                // đổi icon
                btn.querySelector('i').className = (next === 'dark') ? 'bi bi-moon-stars' : 'bi bi-sun';
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
